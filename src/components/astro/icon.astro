---
import icons, { getIcon } from "../../assets/icons"
const { icon, link, size, class: className, ...props } = Astro.props
---

<a
  href={link}
  target="_blank"
  class:list={[className]}
  data-umami-event={icon}
  aria-label={icon}
  title={icon}
  {...props}
>
  <Fragment set:html={getIcon(icon as keyof typeof icons, size)} />
</a>

<style>
  a:hover {
    color: red;
  }
</style>
